<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">OnlineExam</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                    </li>

                    @if (User.Identity.IsAuthenticated)
                    {
                        @if (User.IsInRole("Admin"))
                        {
                            <!-- Admin Links -->
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Exams" asp-action="Index">Manage Exams</a>
                            </li>
                        }
                        else
                        {
                            <!-- User Links -->
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Exams" asp-action="AvailableExams">Available Exams</a>
                            </li>
                        }
                    }
                </ul>

                <!-- Authentication Section -->
                <ul class="navbar-nav">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <span class="nav-link">Welcome, <strong>@User.Identity.Name</strong></span>
                        </li>
                        <li class="nav-item">
                            <form asp-action="Logout" asp-controller="Authentication" method="post">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-danger">Logout</button>
                            </form>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a asp-action="Login" asp-controller="Authentication" class="btn btn-primary">Login</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>
</header>
