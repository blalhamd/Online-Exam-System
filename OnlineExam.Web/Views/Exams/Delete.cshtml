@model ExamViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Delete Exam";
}

<h2 class="text-center text-danger mt-3">Confirm Delete Exam</h2>

<div class="alert alert-warning text-center">
    <h4>Are you sure you want to delete this exam?</h4>
    <p>This action cannot be undone.</p>
</div>

<div class="card mt-3">
    <div class="card-body">
        <h5 class="card-title">@Model.SubjectName</h5>
        <p><strong>Description:</strong> @Model.Description</p>
        <p><strong>Level:</strong> @Model.Level</p>
        <p><strong>Total Grade:</strong> @Model.TotalGrade</p>
        <p><strong>Duration:</strong> @Model.Duration</p>
        <p><strong>Status:</strong> @(Model.Status ? "Active" : "Inactive")</p>
    </div>
</div>

<!-- Delete Confirmation Form -->
<form asp-action="DeleteConfirmed" asp-controller="Exams" method="post" class="mt-3">
    @Html.AntiForgeryToken()
    <input type="hidden" name="examId" value="@Model.SubjectId" />

    <div class="text-center mt-3">
        <button type="submit" class="btn btn-danger px-4">Yes, Delete</button>
        <a href="@Url.Action("Index", "Exams")" class="btn btn-secondary px-4">Cancel</a>
    </div>
</form>
